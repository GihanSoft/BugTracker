<svg class="bi" height="@FinalSize" width="@FinalSize" fill="currentColor">
    <use xlink:href="@KindKey" />
</svg>

@code {
    [Parameter, EditorRequired] public BootstrapIconKind Kind { get; set; }
    [Parameter] public IconSize? Size { get; set; }
    [Parameter] public int? CustomSize { get; set; }

    private int FinalSize => CustomSize ?? ((int?)Size) ?? 24;
    private string KindKey => "lib/bootstrap-icons/bootstrap-icons.svg#" + Kind switch
    {
        BootstrapIconKind.Eye_Fill => "eye-fill",
        BootstrapIconKind.Eye_Slash_Fill => "eye-slash-fill",
        BootstrapIconKind.Gear => "gear",
        BootstrapIconKind.Moon_Stars_Fill => "moon-stars-fill",
        BootstrapIconKind.People => "people",
        BootstrapIconKind.Sun_Fill => "sun-fill",
        BootstrapIconKind.Trash => "trash",
        _ => "",
    };
}
